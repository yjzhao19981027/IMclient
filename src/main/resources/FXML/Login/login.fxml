<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<Pane fx:id="loginPane" prefWidth="540" prefHeight="415" stylesheets="@login.css"
      fx:controller="sample.Controller.LoginController"
      xmlns="http://javafx.com/javafx/8.0.121"
      xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <!-- 操作栏；最小化、关闭 -->
        <Pane id="operation" prefWidth="540" prefHeight="158">
            <children>
                <Label id="login_logo" styleClass="logo" layoutX="10" layoutY="5" prefWidth="200" prefHeight="15" text="憨憨语约" style="-fx-text-fill:#666666;"/>
                <Button id="login_min" styleClass="min" layoutX="454" prefWidth="43" prefHeight="32"/>
                <Button id="login_close" styleClass="close" layoutX="497" prefWidth="43" prefHeight="32"/>
            </children>
        </Pane>

        <!-- 头像 -->
        <Pane id="headImg" layoutX="80" layoutY="200" prefWidth="100" prefHeight="100"/>

        <TextField fx:id="Name" layoutX="200" layoutY="200" prefWidth="250" prefHeight="45" promptText="账号">
            <padding>
                <Insets left="10"/>
            </padding>
        </TextField>

        <PasswordField fx:id="Password" layoutX="200" layoutY="255" prefWidth="250" prefHeight="45" promptText="密码">
            <padding>
                <Insets left="10"/>
            </padding>
        </PasswordField>

        <Button fx:id="login_button" mnemonicParsing="false" onAction="#login_buttonAction" styleClass="login_button"
                layoutX="200" layoutY="345" prefWidth="120" prefHeight="45" text="登 陆"/>

        <Button fx:id="register_button" mnemonicParsing="false" onAction="#register_buttonAction" styleClass="login_button"
                layoutX="330" layoutY="345" prefWidth="120" prefHeight="45" text="注 册"/>
    </children>

</Pane>
