<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.image.ImageView?>
<Pane fx:id="ChatPane" prefHeight="656.0" prefWidth="994.4" stylesheets="@chat.css"
      fx:controller="sample.Controller.ChatController"
      xmlns="http://javafx.com/javafx/8.0.172-ea"
      xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <!-- 控制栏 -->
        <Pane fx:id="bar" prefHeight="656" prefWidth="60.8">
            <!-- 头像 -->
            <ImageView fx:id="bar_headImg" layoutX="10.4" layoutY="18.4" fitHeight="40" fitWidth="40"/>

            <!-- 聊天 -->
            <Button fx:id="bar_chat" onAction="#bar_chatAction" layoutX="10.4" layoutY="80" mnemonicParsing="false" prefHeight="24" prefWidth="24"/>

            <!-- 好友 -->
            <Button fx:id="bar_friend" onAction="#bar_friendAction" layoutX="10.4" layoutY="128" mnemonicParsing="false" prefHeight="24" prefWidth="24"/>

            <!-- 添加好友 -->
            <Button fx:id="bar_addFriend" onAction="#bar_addFriendAction" layoutX="10.4" layoutY="176" mnemonicParsing="false" prefHeight="24" prefWidth="24"/>

            <!-- 注销 -->
            <Button fx:id="bar_logout" onAction="#bar_logoutAction" layoutX="22.4" layoutY="616" mnemonicParsing="false" prefHeight="24" prefWidth="24"/>
        </Pane>

        <!-- 组；group_bar_chat -->
        <Pane visible="true" fx:id="group_bar_chatboxlist" layoutX="60.8" layoutY="0.8" prefWidth="251.2" prefHeight="654.4" style="-fx-background-color:transparent;-fx-border-width:0;">
            <children>
                <!-- 操作栏；最小化、关闭 -->
                <Pane id="operation" layoutX="251.2" prefWidth="681.6" prefHeight="25.6">
                    <children>
                        <Button id="group_bar_chat_min" styleClass="min" layoutX="613.6" prefWidth="33.6" prefHeight="25.6"/>
                        <Button id="group_bar_chat_close" styleClass="close" layoutX="648" prefWidth="33.6" prefHeight="25.6"/>
                    </children>
                </Pane>
                <!-- 搜索栏 -->
                <Pane stylesheets="@group_bar_chat/chat_search.css" prefHeight="64" prefWidth="251.2" styleClass="search">
                    <children>
                        <TextField fx:id="chat_search" styleClass="searchInput" layoutX="16" layoutY="24" prefHeight="24" prefWidth="192" promptText="搜索">
                            <padding>
                                <Insets left="24"/>
                            </padding>
                        </TextField>
                        <Label fx:id="chat_searchAdd" styleClass="searchAdd" layoutX="216" layoutY="24" prefHeight="24" prefWidth="24"/>
                    </children>
                </Pane>
                <!-- 会话栏 -->
                <Pane id="talk" layoutY="64" prefHeight="590.4" prefWidth="251.2" stylesheets="@group_bar_chat/chat_talk.css" styleClass="talkListStyle">
                    <children>
                        <ScrollPane hbarPolicy="NEVER" layoutX="-1.0" layoutY="-1.0" prefHeight="590.4" prefWidth="251.2">
                            <content>
                                <FlowPane fx:id="chatboxlist" prefHeight="59.0" prefWidth="100.0" />
                            </content>
                        </ScrollPane>
                    </children>
                </Pane>
            </children>
        </Pane>
        <Pane visible="false" fx:id="group_bar_chatWindow" layoutX="312" layoutY="0.8" prefWidth="681.6" prefHeight="654.4">
            <children>
                <!-- 消息栏；对话名称(昵称、群名称) -->
                <Pane fx:id="information" layoutY="25.6" prefWidth="681.6" prefHeight="484.8" stylesheets="@group_bar_chat/chat_information.css">
                    <children>
                        <Pane id="info_pane" prefWidth="681.6" prefHeight="35.2">
                            <children>
                                <Label fx:id="info_more" layoutX="640" prefWidth="34.4" prefHeight="34.4" text = "..." />
                                <Label fx:id="info_name" layoutX="32" layoutY="-6.4" prefWidth="320" prefHeight="32" />
                            </children>
                        </Pane>
                        <ScrollPane fx:id="info_pane_box" layoutX="0.8" layoutY="36" prefWidth="680" prefHeight="448" styleClass="infoBoxStyle">
                            <content>
                                <FlowPane fx:id="msgList" prefHeight="45.0" prefWidth="366.0" />
                            </content>
                        </ScrollPane>
                    </children>
                </Pane>
                <!-- 工具栏 -->
                <Pane id="tool" layoutY="510.4" prefWidth="681.6" prefHeight="36.8" stylesheets="@group_bar_chat/chat_tool.css">
                    <children>
<!--                        按钮差一个图标，在chat_tool.css里面改-->
                        <Button id="tool_face" layoutX="16" layoutY="2.4" prefWidth="32" prefHeight="32"/>
                        <Button fx:id="tool_send_img" onAction="#send_imgAction" layoutX="64" layoutY="2.4" prefWidth="32" prefHeight="32"/>
                        <Button fx:id="tool_call" onAction="#callAction" layoutX="112" layoutY="2.4" prefWidth="32" prefHeight="32"/>
                    </children>
                </Pane>
                <!-- 文本栏 -->
                <Pane id="txt" layoutY="547.2" prefWidth="681.6" prefHeight="72" stylesheets="@group_bar_chat/chat_txt.css" styleClass="txt_input_style">
                    <children>
                        <TextArea fx:id="txt_input" layoutX="16" prefWidth="650.4" prefHeight="72" wrapText="true"/>
                    </children>
                </Pane>
                <!-- 触达消息[发送] -->
                <Pane id="touch" layoutY="620" prefWidth="681.6" prefHeight="32" stylesheets="@group_bar_chat/chat_touch.css">
                    <children>
                        <Button fx:id="touch_send" onAction="#touch_sendAction" layoutX="584" prefWidth="68" prefHeight="23.2" text="发送"/>
                    </children>
                </Pane>
            </children>
        </Pane>

        <!-- 组；group_bar_friend -->
        <Pane visible="false" fx:id="group_bar_friend" layoutX="60.8" layoutY="0.8" prefWidth="932.8" prefHeight="654.4">
            <children>
                <!-- 操作栏；最小化、关闭 -->
<!--                <Pane id="operation" layoutX="251.2" prefWidth="681.6" prefHeight="25.6">-->
<!--                    <children>-->
<!--                        <Button id="group_bar_friend_min" styleClass="min" layoutX="613.6" prefWidth="33.6" prefHeight="25.6"/>-->
<!--                        <Button id="group_bar_friend_close" styleClass="close" layoutX="613.6" prefWidth="33.6" prefHeight="25.6"/>-->
<!--                    </children>-->
<!--                </Pane>-->
                <!-- 搜索栏 -->
                <Pane styleClass="search" prefHeight="64" prefWidth="251.2" stylesheets="@group_bar_friend/chat_search.css">
                    <children>
                        <TextField fx:id="friend_search" styleClass="searchInput" layoutX="16" layoutY="24" prefHeight="24" prefWidth="192" promptText="搜索">
                            <padding>
                                <Insets left="24"/>
                            </padding>
                        </TextField>
                        <Label fx:id="friend_searchAdd" styleClass="searchAdd" layoutX="216" layoutY="24" prefHeight="24" prefWidth="24"/>
                    </children>
                </Pane>
                <!-- 好友栏 -->
                <Pane id="friend" layoutY="64" prefHeight="590.4" prefWidth="251.2"
                      stylesheets="@group_bar_friend/chat_friend.css" styleClass="friendListStyle">
                    <children>
                        <ScrollPane hbarPolicy="NEVER" layoutX="-1.0" layoutY="-1.0" prefHeight="590.4" prefWidth="251.2">
                            <content>
                                <FlowPane fx:id="friendlist" prefHeight="59.0" prefWidth="100.0"/>
                            </content>
                        </ScrollPane>
                    </children>
                </Pane>
                <!-- 内容栏；新的朋友、公众号、群组、好友，明细信息(发送消息按钮) -->
                <Pane fx:id="content" visible="false" layoutX="251.2" layoutY="25.6" prefWidth="681.6" prefHeight="484.8" styleClass="content" stylesheets="@group_bar_friend/chat_content.css">
                    <children>
                        <Pane id="content_pane" prefWidth="681.6" prefHeight="35.2">
                            <children>
                                <ImageView fx:id="content_headImg" layoutX="320" layoutY="30" fitHeight="60" fitWidth="60"/>
                                <Label fx:id="content_name" layoutX="320" layoutY="90" prefWidth="320" prefHeight="64"/>
                                <Label fx:id="content_age" layoutX="320" layoutY="180" prefWidth="320" prefHeight="64"/>
                                <Label fx:id="content_sex" layoutX="320" layoutY="260" prefWidth="320" prefHeight="64"/>
                                <Label fx:id="content_motto" layoutX="320" layoutY="340" prefWidth="320" prefHeight="64"/>
                            </children>
                        </Pane>
                        <Pane id="content_pane_box" layoutX="0.8" layoutY="36" prefWidth="680" prefHeight="448" style="-fx-background-color:transparent;-fx-border-width:0;"/>
                        <Button fx:id="send_msg" onAction="#send_msgAction" text = "发送消息"
                                layoutX="325" layoutY="550" mnemonicParsing="false" prefHeight="50" prefWidth="90"/>
                    </children>
                </Pane>
            </children>
        </Pane>
    </children>

</Pane>
